{
  "$defs": {
    "Base": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["id"]
    },
    "Named": {
      "type": "object",
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "description": { "type": "string" }
      },
      "required": ["name"]
    }
  },
  "allOf": [
    { "$ref": "#/$defs/Base" },
    { "$ref": "#/$defs/Named" },
    {
      "type": "object",
      "properties": {
        "status": { "type": "string", "enum": ["active", "inactive", "archived"] },
        "priority": { "type": "integer", "minimum": 1, "maximum": 5 }
      },
      "required": ["status"]
    }
  ]
}
