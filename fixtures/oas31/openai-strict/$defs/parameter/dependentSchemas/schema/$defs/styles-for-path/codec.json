{
  "$schema": "https://json-schema-llm.dev/codec/v1",
  "transforms": [
    {
      "type": "nullable_optional",
      "path": "#/then/properties/name",
      "originalRequired": false
    },
    {
      "type": "nullable_optional",
      "path": "#/then/properties/style",
      "originalRequired": false
    },
    {
      "type": "root_object_wrapper",
      "path": "#",
      "wrapperKey": "result"
    },
    {
      "type": "json_string_parse",
      "path": "#/properties/result"
    }
  ],
  "droppedConstraints": [
    {
      "path": "#",
      "constraint": "if",
      "value": {
        "additionalProperties": false,
        "properties": {
          "in": {
            "const": "path"
          }
        },
        "required": [
          "in"
        ],
        "type": "object"
      }
    },
    {
      "path": "#",
      "constraint": "then",
      "value": {
        "additionalProperties": false,
        "properties": {
          "name": {
            "anyOf": [
              {
                "pattern": "[^/#?]+$"
              },
              {
                "type": "null"
              }
            ]
          },
          "required": {
            "const": true
          },
          "style": {
            "anyOf": [
              {
                "default": "simple",
                "enum": [
                  "matrix",
                  "label",
                  "simple"
                ]
              },
              {
                "type": "null"
              }
            ]
          }
        },
        "required": [
          "name",
          "required",
          "style"
        ],
        "type": "object"
      }
    }
  ]
}
