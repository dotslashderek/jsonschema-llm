    "security-scheme": {
      "$comment": "https://spec.openapis.org/oas/v3.1.0#security-scheme-object",
      "$defs": {
        "type-apikey": {
          "if": {
            "properties": {
              "type": {
                "const": "apiKey"
              }
            },
            "required": [
              "type"
            ]
          },
          "then": {
            "properties": {
              "in": {
                "enum": [
                  "query",
                  "header",
                  "cookie"
                ]
              },
              "name": {
                "type": "string"
              }
            },
            "required": [
              "name",
              "in"
            ]
          }
        },
