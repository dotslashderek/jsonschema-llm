              "type"
            ]
          },
          "then": {
            "properties": {
              "scheme": {
                "type": "string"
              }
            },
            "required": [
              "scheme"
            ]
          }
        },
        "type-http-bearer": {
          "if": {
            "properties": {
              "scheme": {
                "pattern": "^[Bb][Ee][Aa][Rr][Ee][Rr]$",
                "type": "string"
              },
              "type": {
                "const": "http"
              }
            },
            "required": [
